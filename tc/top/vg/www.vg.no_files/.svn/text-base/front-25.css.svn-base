/* Image borders */
#drfront-mainfront .img-brd-0 img.article-image {
    border: none;
}

#drfront-mainfront .img-brd-1 img.article-image {
    border: 1px solid #000;
}

#drfront-mainfront .img-brd-2 img.article-image {
    border: 2px solid #000;
}

/**********************************************
 * Fixes for IE                               *
 *********************************************/

/* fixes bug with invisible text */
#drfront-mainfront img.article-image {
	display: block;
}

/* doubled-margin bug */
#drfront-mainfront .article-extract {
	display: inline;
}

/* doubled-margin bug */
#drfront-mainfront img.left, #drfront-mainfront img.right {
	display: inline;
}
