/*----------------Styles for registration screen-----------------------------*/
#registerfrm				{ float:left; width:100%; }
#registerfrm .reg_container	{ position:relative; padding:4px 3px; margin:4px 0px; height:24px; }
#registerfrm .fldLabel 		{ float:left; width:19%; line-height:2.2em; font-size:11px; text-align:left; padding-left:5px; font-weight:bold; }
#registerfrm .fldInput 		{ float:right; width:80%; text-align:left; padding-top:1px; }
#registerfrm .reg_msg 		{ float:right; padding:5px; font-size:11px; text-align:right; }
#registerfrm .reg_msginfo	{ background-color:#fff9d7; border:1px #e2c822 solid; padding-top:3px; padding-left:2px; padding-bottom:3px; padding-right:2px; }
#registerfrm .reg_msgerror	{ background-color:#ffe4e4; border:1px #dc8585 solid; padding-top:3px; padding-left:2px; padding-bottom:3px; padding-right:2px; }
#registerfrm input[type="password"] { background-color: #fff; border: solid 1px; border-color: #aaa #eee #eee #aaa; }
#registerfrm .generic		{ background:url(generic0.png) no-repeat; height:122px; border-bottom:1px solid #DEDEDE; margin-top:-5px; margin-bottom:-10px; }
#registerfrm .nokia			{ background:url(nokia000.png) no-repeat 17px; height:120px; border-bottom:1px solid #DEDEDE; margin-top:-3px; margin-bottom:-10px; }
#reg_div_notify	.invalid	{ color:#960000; font-size:14px; text-align:center; margin-bottom:10px; }
#reg_div_tos input,
#reg_div_tos label			{ margin-top:0px;; }
#registerfrmTitle			{ padding-top:10px; height:50px; }
#registerfrmTitle p			{ float:left; font-size:23px; font-weight:bold; color:#000000; }
.regPrivacy					{ width:50%; }
#why_register				{ margin-top:-6px; }
#why_register .wrItem		{ height:50px; margin-top:15px; }
#why_register p				{ margin:0px; }
#why_register img			{ float:left;margin-right:10px; }
div.zRegLayer				{ display:none; position:relative; width:300px; height:auto; left:25%; top:0px; border:2px #bbbbbb solid; background:#ffffff; padding:6px; margin-top:3px; }
input.regDataFld			{ width:193px; }
input.regGender				{ margin-left:20px; margin-top:2px; }
input.regSignUp, input.regLogin { width:150px;font-size:15px;font-weight:bold;padding:3px 0px 3px 0px; }
select.regDataSel			{ width:200px; }
select.regBDay				{ width:60px; }
select.regBMonth			{ width:65px; }
select.regBYear				{ width:75px; }
#registeruserfrm			{ width:100%; height:auto; position:relative; margin-top:-5px; }
#registeruserfrm .choice	{ font-size:12px; font-weight:bold; color:#222222; padding-bottom:3px; }
#registeruserfrm a			{ line-height:1.5em; }
#registeruserfrm .reg_msg 	{ padding:5px; }
#registeruserfrm .reg_msginfo { background-color:#fff9d7; border:1px #e2c822 solid; }
#registeruserfrm .reg_msgerror { background-color:#ffe4e4; border:1px #dc8585 solid; }
#registeruserfrm #user_check { width:120px; }
#registeruserfrm .try		{ float:left; width:270px; }
#registeruserfrm .or		{ float:left; margin-top:-7px; font-size:20px; color:#222; width:30px; height:76px; background:url(bg-vert-.gif) repeat-y 8px 0px; }
#registeruserfrm .or span	{ background-color:#ffffff; }
#registeruserfrm .choose	{ float:right; width:200px; }
.regUsersignup				{ padding-left:40px; }
#regsuccess	.close			{ font-weight:normal; font-size:10px; color:#960000; }


