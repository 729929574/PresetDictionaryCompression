/* LAYOUT
----------------------------------------------------------------------------- */
#content							{ float: left; width: 630px; }
#sidebar							{ float: right; padding-top: 10px; width: 320px; text-align: center; }
#sidebar .advert					{ margin: 0 auto; }
#sidebar .box						{ text-align: left; }


#navbar								{ background:url(search_c.gif) no-repeat top right;height:54px;width:98%;margin-left:5px;margin-right:-20px;margin-bottom:-15px;margin-top:10px; }
.navbarleft							{ background:url(search_c.gif) no-repeat top left; }
.navbarbody							{ background:url(search_b.gif) repeat-x;margin-left:20px;height:54px;margin-right:20px; }
#search								{ margin:0px; width: auto; text-align: left; height:28px;}
#search div							{ margin: 1em auto 0 auto; }
#search select						{ width: 180px; }
p input#txt_query					{ width: 300px; }
#itemsearchbrowse p input#txt_query			{ width: 16em; }
#itemsearchbrowse select#lst_content_type	{ width: 90px; }
#small-search #search				{ margin-left:-7px; padding-top:1px; }
#search_box .breadcrumbs			{ left: 430px; position: absolute; top: 20px; overflow: hidden; width: 500px; }
#itemsearch							{ float:left;height: auto;text-align:left; width: auto; }
.item								{ float: left; margin: .5em 0; position: relative; }

#description						{ margin-top:-15px; }
#description .header				{ height: 20px; }
#description .footer 				{ height: 18px; }
#description .container				{ padding: 0px 15px; }
#description #million8				{ background: url( 8million.gif ) no-repeat; float: left; margin-top:10px;margin-left: 5px; height: 53px; width: 182px; }
#description #million9				{ background: url( 9million.gif ) no-repeat; float: left; margin-top:10px;margin-left: 5px; height: 53px; width: 182px; }
#description #million10				{ background: url( 10millio.gif ) no-repeat; float: left; margin-top:0px;margin-left: 0px; height: 75px; width: 205px; }
#description ul						{ background: url( rings000.gif ) no-repeat bottom right; list-style-type: none; margin-left: 220px; width: 355px;vertical-align:middle; }
#description ul li					{ height: 24px; }
#description li img					{ vertical-align: middle;padding-right:5px; }

#browse .header li					{ position:relative; width: 126px; }
#people .header li					{ position:relative; width: 210px; }

.itemcontainer						{ margin: 10px 18px; }
/*#browse .item dt span				{ display: block; height: 175px; }*/

#flash_update_feed					{ background: url( feedBack.gif ) no-repeat center; }

.tags								{ overflow: hidden; width: 100px; }

#sidebar h2							{ margin: 0; padding: 0; }
#tools dl, #todo dl					{ clear:both;height: auto; margin: 10px 0; position: relative; }
#tools dt, #todo dt					{ float: left; height: 70px;margin-bottom:10px; width: 70px; }
#tools dd, #todo dd					{ float: left; padding-left: 10px; width: 180px; }

#browse .content, #people .content	{ margin: 0 0 1em; }
#people .content-sm					{ margin:0px; }


